    <ButtonGroup>
        <Button ComponentStyle="ComponentStyle.Secondary">5</Button>
        <Button ComponentStyle="ComponentStyle.Secondary">6</Button>
        <Button ComponentStyle="ComponentStyle.Secondary">7</Button>
    </ButtonGroup>
    <ButtonGroup>
        <Button ComponentStyle="ComponentStyle.Secondary">8</Button>
    </ButtonGroup>
</ButtonToolbar>
