@inherits BootstrapComponentBase

<Div @attributes="this.Attributes">

    @if(null != this.HeaderTemplate)
    {
        @this.HeaderTemplate(this.Header)
    }
    else
    {
        <ToastHeader Header="@this.Header" Subheader="@this.Subheader" ShowHideButton="@this.ShowHideButton"></ToastHeader>
    }
    <Div class="@ClassNames.Toasts.Body">@this.ChildContent</Div>

</Div>
