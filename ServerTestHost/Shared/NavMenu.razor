            <NavLink class="nav-link" href="breadcrumbs">
                <span class="oi oi-ellipses" aria-hidden="true"></span> Breadcrumbs
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="buttons">
                <span class="oi oi-media-stop" aria-hidden="true"></span> Buttons
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="cards">
                <span class="oi oi-spreadsheet" aria-hidden="true"></span> Cards
            </NavLink>
        </li>
    </ul>
</div>

@code {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
