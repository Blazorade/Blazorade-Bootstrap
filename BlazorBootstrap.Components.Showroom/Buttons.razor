<Heading Level="HeadingLevel.H2" MarginTop="Spacing.Five">Active State</Heading>
<Button Color="ComponentColor.Secondary" Size="ButtonSize.Large" IsActive="@isActive">Primary Button</Button>
<Button IsLink="true" OnClick="ToggleIsActive">Toggle</Button>

@code {
    bool isActive = true;
    void ToggleIsActive()
    {
        isActive = !isActive;
    }
}


<Heading Level="HeadingLevel.H2" MarginTop="Spacing.Five">Disabled State</Heading>
<Button Color="ComponentColor.Primary" Size="ButtonSize.Large" IsDisabled="@isDisabled">Primary Button</Button>
<Button IsLink="true" OnClick="ToggleIsDisabled">Toggle</Button>

@code {
    bool isDisabled = false;
    void ToggleIsDisabled()
    {
        isDisabled = !isDisabled;
    }
}


