<Heading Id="active-state" IsAnchor="true" Level="HeadingLevel.H3" MarginTop="Spacing.Five">Active State</Heading>
<Button Color="NamedColor.Secondary" Size="ButtonSize.Large" IsActive="@isActive">Primary Button</Button>
<Button Clicked="ToggleIsActive" class="btn-link">Toggle</Button>

@code {
    bool isActive = true;
    void ToggleIsActive()
    {
        isActive = !isActive;
    }
}


<Heading Id="disabled-state" IsAnchor="true" Level="HeadingLevel.H3" MarginTop="Spacing.Five">Disabled State</Heading>
<Button Color="NamedColor.Primary" Size="ButtonSize.Large" IsDisabled="@isDisabled">Primary Button</Button>
<Button Clicked="ToggleIsDisabled" class="btn-link">Toggle</Button>

@code {
    bool isDisabled = false;
    void ToggleIsDisabled()
    {
        isDisabled = !isDisabled;
    }
}


