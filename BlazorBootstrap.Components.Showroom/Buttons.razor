<Heading Id="handling-clicks" IsAnchor="true" Level="HeadingLevel.H3" MarginTop="Spacing.Five">Handling Clicks</Heading>

@code {
    int count = 0;

    private void OnCountClick()
    {
        count++;
    }
}
<Button Color="NamedColor.Dark" IsOutline="true" Clicked="this.OnCountClick">Clicked: <Badge Color="NamedColor.Primary">@count</Badge></Button>

