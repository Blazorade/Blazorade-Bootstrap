@inherits BootstrapComponentBase


<Anchor Url="@this.Url" IgnoreEmptyUrl="true" @attributes="this.Attributes">
    @if(null != this.ChildContent)
    {
        @this.ChildContent
    }
    else
    {
        @if (!string.IsNullOrEmpty(this.ImageUrl))
        {
            <img src="@this.ImageUrl" />
        }

        @this.Text
    }
</Anchor>
